<h1>Make your shopping list</h1>
<div class="mt-4">
    @foreach (var recipe in Model.Recipes)
    {
    <form class="form-inline" method="post" asp-action="Index">
        <input type="hidden" value="@recipe.Id" name="recipeId" />
        <div class="form-group mb-2">
            <label for="staticRecipe" class="sr-only">Recipe</label>
            <input type="text" readonly class="form-control-plaintext" id="staticRecipe" value="@recipe.Name">
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <input type="number" class="form-control" min="1" step="1" id="recipeQuantity" required name="quantity" placeholder="Amount">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Add to shopping cart</button>
    </form>
    }
</div>
<div class="mt-4">
    @if (Model.ShoppingCartItems.Count == 0)
    {
        <h3>No recipes were added to shopping cart</h3>
    }
    else
    {
        <div class="row">
            <div class="col">
                <h3>Ingredients to buy:</h3>
            </div>
            <div class="col-auto">
                <a asp-action="ClearShoppingCart" class="btn btn-warning">Clear shopping cart</a>
            </div>
        </div>
        <ul>
            @foreach (var ingredient in Model.ShoppingCartItems)
            {
                <li>@ingredient.Name @ingredient.Quantity @ingredient.MeasurementValue</li>
            }
        </ul>
    }
</div>
